{
    "name": "kseven/shoppingcart",
    "description": "CodeIgniter4 shopping cart.",
    "keywords": ["codeigniter4", "shopping cart", "cart"],
    "license": "MIT",
    "authors": [
        {
            "name": "K'Seven",
            "email": "contato@kseven.dev.br"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "codeigniter4/framework": "^4.1",
        "tightenco/collect": "7.19"
    },
    "autoload": {
        "psr-4": {
            "ShoppingCart\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always -vvv"
    }
}
